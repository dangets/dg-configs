#!/usr/bin/conky -d -c
# The .conkyrc configuration for Conky-Joey
alignment top_right
background no
cpu_avg_samples 2
default_color 333333

double_buffer yes
draw_borders no
draw_graph_borders no
draw_shades no

gap_x 20
gap_y 50
max_specials 1024
max_user_text 10000
maximum_width 1600
minimum_size 300
net_avg_samples 2
no_buffers yes
override_utf8_locale yes
own_window yes
own_window_transparent yes
own_window_argb_visual yes
own_window_type desktop
own_window_class conky-semi
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
pad_percents 2
short_units yes
stippled_borders 0
text_buffer_size 8000
total_run_times 0
update_interval 1.0
uppercase no
use_spacer right
use_xft yes

TEXT
${font Geosans Light:pixelsize=110:alignc}${time %I:%M %p}${font}
${font Geosans Light:pixelsize=32:alignr}${time %A %B %d, %Y}${font}
