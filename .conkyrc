# conky configuration

# set to yes if you want Conky to be forked in the background
background no

# Use Xft?
use_xft yes

# Xft font when Xft is enabled
#xftfont Liberation Mono:pixelsize=11
#xftfont terminus:pixelsize=8
xftfont standard 07_56:size=6

# Text alpha when using Xft
xftalpha 0.8

# Print everything to console?

# out_to_console no

# Update interval in seconds
update_interval 3.0

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Text alignment
alignment top_middle

# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_transparent no
own_window_type desktop
own_window_hints below,undecorated,sticky,skip_taskbar
#own_window_colour 222222

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 1278
maximum_width 1278

# Draw shades?
draw_shades no

# Draw outlines?
draw_outline no

# Draw borders around text
draw_borders no
border_inner_margin 0

# border width
border_width 1

# Default colors and also border colors
default_color dddddd
#default_border_color white
default_shade_color black
default_outline_color black


# Gap between borders of screen and text

# same thing as passing -x at command line
gap_x 0
gap_y 0

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# number of cpu samples to average (set to 1 to disable averaging)
cpu_avg_samples 2

# set to 1 to disable averaging
net_avg_samples 2

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

TEXT
${color #979797}RAM: ${color}$mem / $memmax  ::  ${color #979797}CPU0: ${color}${cpu cpu1}% / ${freq_g 1}GHz / ${hwmon 1 temp 2}°C  ::  ${color #979797}CPU1: ${color}${cpu cpu2}% / ${freq_g 2}GHz / ${hwmon 1 temp 3}°C  ::  ${color #979797}GPU: ${color}${execi 15 nvidia-settings --query GPUCoreTemp --terse | head -1}°C  ::  ${color #979797}ROOT: ${color}${fs_free /} free  ::  ${color #979797}HOME: ${color}${fs_free /home} free  ${alignr 4} ${color #979797}wlan0: ${color}${addr wlan0}${if_up wlan0} (↑${upspeed wlan0} ↓${downspeed wlan0})${endif}  ::  ${color #979797}BAT: ${color}${battery}  ::  ${time %A}, ${time %e %B}  ${color #979797}${time %H:%M}${color}
